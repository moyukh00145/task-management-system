<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
      </div>
      <div class="modal-body">
        <div class="form-group mt-3">
          <input
            type="text"
            class="form-control"
            id="input-fname"
            placeholder="First name" />
            <p id="first-name-error" class="text-danger"></p>
        </div>
        <div class="form-group mt-3">
          <input
            type="text"
            class="form-control"
            id="input-lname"
            placeholder="Last name" />
            <p id="last-name-error" class="text-danger"></p>
        </div>
        <div class="form-group mt-3">
          <input
            type="email"
            class="form-control"
            id="input-email"
            placeholder="Email" />
            <p id="email-error" class="text-danger"></p>
        </div>
        <div class="form-group mt-3">
          <label for="input-roles">Roles</label>
          <select id="input-roles" class="form-control">
            <option selected>Choose...</option>
            <option value="0">Employee</option>
            <option value="1">HRD</option>
            <option value="2">Admin</option>
          </select>
          <p id="roles-error" class="text-danger"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
          id="close-modal">
          Close
        </button>
        <button type="button" class="btn btn-primary" id="add-user-to-db">
          Add User
        </button>
      </div>
    </div>
  </div>
</div>