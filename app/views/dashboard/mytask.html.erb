<div class="min-height-300 bg-primary position-absolute blue-bar"></div>

<div class="container-fluid mt-3 position-relative">
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-4 custom-card p-3">
        <h3 class="text-center">My Task</h3>
        <div class="card-body  ">
          <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="assigned-tab" data-bs-toggle="tab" data-bs-target="#assigned"
                type="button" role="tab" aria-controls="assigned" aria-selected="true">Assigned</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="working-tab" data-bs-toggle="tab" data-bs-target="#working" type="button"
                role="tab" aria-controls="working" aria-selected="false">Working</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button"
                role="tab" aria-controls="completed" aria-selected="false">Completed</button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="assigned" role="tabpanel" aria-labelledby="assigned-tab">
              <%= render partial:"shared/filterNav" ,:locals => {:status => "assigned"}%>
                <div>
                  <% if @assigned_mytasks.count == 0 %>
                    <h3 class="text-center no-assigned-task" id="my-assigned-empty-task">No Task Assigned</h3>
                  <% end  %>
                  <ul class="list-unstyled" id="my-assigned-task-list">
                    <% @assigned_mytasks.each do |task| %>
                      <%= render partial:"shared/taskItems", :locals => {:task => task}%>
                    <% end %>
                  </ul>
                  
                </div>
                <div class="d-flex justify-content-center">
                    <%= paginate @assigned_mytasks %>
                </div>
            </div>

            <div class="tab-pane fade" id="working" role="tabpanel" aria-labelledby="working-tab">
              <%= render partial:"shared/filterNav",:locals => {:status => "working"} %>
              <div>
                  <% if @working_mytasks.count == 0 %>
                    <h3 class="text-center no-assigned-task" id="my-working-empty-task">No Task Assigned</h3>
                   <% end  %>
                  <ul class="list-unstyled" id="my-working-task-list">
                    <% @working_mytasks.each do |task| %>
                      <%= render partial:"shared/taskItems", :locals => {:task => task}%>
                    <% end %>
                  </ul>
                 
                </div>
                <div class="d-flex justify-content-center">
                  <%= paginate @working_mytasks %>
                </div>
            </div>
            <div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
              <%= render partial:"shared/filterNav",:locals => {:status => "completed"} %>
              <div>
                  <% if @completed_mytasks.count == 0 %>
                    <h3 class="text-center no-assigned-task" id="my-completed-empty-task">No Task Assigned</h3>
                  <% end  %>
                  <ul class="list-unstyled" id="my-completed-task-list">
                    <% @completed_mytasks.each do |task| %>
                      <%= render partial:"shared/taskItems", :locals => {:task => task}%>
                    <% end %>
                  </ul>
                   
                </div>
                <div class="d-flex justify-content-center">
                  <%= paginate @completed_mytasks %>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="task-add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Assign Task</h5>
      </div>
      <div class="modal-body">
        <div class="form-group mt-3">
          <input type="text" class="form-control" id="task-name" placeholder="Task Name" />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="close-modal">
          Close
        </button>
        <button type="button" class="btn btn-primary" id="assign-task">
          Assign Task
        </button>
      </div>
    </div>
  </div>
</div>